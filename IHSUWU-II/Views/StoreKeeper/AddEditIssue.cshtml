@using Login.Models.Constants;
@using Login.Models;
@model Login.Models.Issue

<script src="@Url.Content("~/Scripts/Apps/Store.js")" type="text/javascript"></script>
<script type="text/javascript">

    var AdminUrl = {

        //ManageLeads: '@Url.Content("~/Lead/ManageLeads")',
        //GetDesignations: '@Url.Content("~/Admin/GetDesignations")',
        SaveIssue: '@Url.Content("~/StoreKeeper/SaveIssue")',
        ReviewIssue: '@Url.Content("~/StoreKeeper/ReviewIssue")'


    };
    $(document).ready(function () {
        selectmenu(2);
    });
</script>

@{
    ViewBag.Title = "Add Edit Users";
    Layout = "_SuperAdmin.cshtml";

}


<div class="col-md-12" style="padding-left: 45px !important;padding-right: 45px !important">
    @section Headertitle {
        @{
            var title = Model.IId > 0 ? "Update Issue Note" : "Add Issue Note";
        }

        <h1>
            @title
        </h1>
        <div class="col-md-2 pull-right" style="margin-right: -25px;">
            <a type="button" class="btn btn-default" id="btnCancelEditLead" data-dismiss="modal" href="@Url.Action("GoBackIssue","StoreKeeper")">Cancel</a>
            <button type="button" id="saveissue" class="btn btn-primary">Save</button>
        </div>

        <hr />
    }

    @using (Html.BeginForm("AddEditLeads", "Admin", FormMethod.Post, new { id = "FrmAEIssues" }))
    {
        <div class="panel panel-default" style="padding: 5px 5px 5px 5px;">
            <div class="panel-heading" style="margin-bottom :5px;">
                <h4>BasicDetails</h4>
            </div>
            <div class="row">
                
                <div class="col-md-4">
                    <span>Location</span><span style="color:red"> *</span>
                    @Html.DropDownListFor(m => m.LocationId, (IEnumerable<SelectListItem>)ViewBag.Locations, new { verrormsg = "Location is required", Id = "location", @class = "form-control" })
                </div>
                
                <div class="col-md-4">
                    <span>Status</span>
                        @Html.TextBoxFor(m => m.IStatus, new { Id = "status", @class = "form-control" })                       
                </div>
                
                @Html.HiddenFor(m => m.IId, new { Id = "IId" })
            </div>
        </div>

    }

</div>

