    var AdminUrl = {

        //ManageLeads: '@Url.Content("~/Lead/ManageLeads")',
        //GetDesignations: '@Url.Content("~/Admin/GetDesignations")',
        SaveRequest: '@Url.Content("~/Department/SaveRequest")',
        ReviewRequest: '@Url.Content("~/Department/ReviewRequest")'


    };
