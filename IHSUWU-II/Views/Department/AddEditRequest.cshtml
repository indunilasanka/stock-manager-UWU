@{
    ViewBag.Title = "Add Edit Users";
    Layout = "_SuperAdmin.cshtml";

}


<div class="col-md-12" style="padding-left: 45px !important;padding-right: 45px !important">
    @section Headertitle {
        @{
            var title = Model.RequestId > 0 ? "Update Assest Requests" : "Add Assest Requests";
        }

        <h1>
            @title
        </h1>
        <div class="col-md-2 pull-right" style="margin-right: -25px;">
            <a type="button" class="btn btn-default" id="btnCancelEditLead" data-dismiss="modal" href="@Url.Action("GoBackRequest","Department")">Cancel</a>
            <button type="button" id="saverequest" class="btn btn-primary">Save</button>
        </div>

        <hr />
    }

    @using (Html.BeginForm("AddEditLeads", "Admin", FormMethod.Post, new { id = "FrmAERequests" }))
    {
        <div class="panel panel-default" style="padding: 5px 5px 5px 5px;">
            <div class="panel-heading" style="margin-bottom :5px;">
                <h4>BasicDetails</h4>
            </div>
            <div class="row">
                
                <div class="col-md-4">
                    <span>Location Name</span><span style="color:red"> *</span>
                    @Html.DropDownListFor(m => m.LocationId, (IEnumerable<SelectListItem>)ViewBag.Locations, new { verrormsg = "Location is required", Id = "supplier", @class = "form-control" })
                </div>
                
                <div class="col-md-4">
                    <span>Request Date</span><span style="color:red"> *</span>
                    <div class='input-group date' id='demoDate1'>
                        @Html.TextBoxFor(m => m.RequestDate, new { verrormsg = "Request Date is required", Id = "createddate", @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>

                <div class="col-md-4">
                    <span>Status</span>
                    @Html.TextBoxFor(m => m.RequestStatus, new { verrormsg = "Request Status is required", Id = "status", @class = "form-control" })
                </div>
                
                @Html.HiddenFor(m => m.RequestId, new { Id = "RequestId" })
            </div>
        </div>

    }

</div>

