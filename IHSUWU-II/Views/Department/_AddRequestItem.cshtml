@model Login.Models.RequestItem

@{
    ViewBag.Title = "AddProduct";
}
<script src="@Url.Content("~/Scripts/Apps/Dp.js")" type="text/javascript"></script>

@{
    var title = Model.RequestItemId > 0 ? "Update Item" : "Add Item";
}


<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@title</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "AddEditRequestItem" }))
            {

                <div class="row form">
                    <label for="Class" class="col-md-4">Main Assests<span style="color:red"> *</span></label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.MCId, (IEnumerable<SelectListItem>)ViewBag.MainAssests, new { verrormsg = "Please select a Main catogory!", Id = "MCId", @class = "form-control" })
                    </div>
                </div>

                <div class="row form">
                    <label for="Class" class="col-md-4">Sub Assests<span style="color:red"> *</span></label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.SCId, (IEnumerable<SelectListItem>)ViewBag.SubAssests, new { verrormsg = "Please select a Sub catogory!", Id = "SCId", @class = "form-control" })
                    </div>
                </div>

                <div class="row form">
                    <label for="Class" class="col-md-4">Product<span style="color:red"> *</span></label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.PROId, (IEnumerable<SelectListItem>)ViewBag.Products, new { verrormsg = "Please select a Product!", Id = "proid", @class = "form-control", OnChange = "Dp.getProductNameById();" })
                    </div>
                </div>
               
                <div class="row form">
                    <label for="Class" class="col-md-4">Description<span style="color:red"> *</span></label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.RequestDescription, new { verrormsg = "Please enter a Desciption!", Id = "desc", @class = "form-control" })
                    </div>
                </div>
                <div class="row form">
                    <label for="Class" class="col-md-4">Request Quantity<span style="color:red"> *</span></label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.RequestQuantity, new { verrormsg = "Please enter a Item Request Quantity!", @class = "form-control", Id = "quanty" })
                        @Html.HiddenFor(m => m.RequestId, new { Id = "RequestId" })
                        @Html.HiddenFor(m => m.RequestItemId, new { Id = "RequestItemId" })

                    </div>
                </div>
               
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">

                    </div>
                </div>
            }
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="button" id="btnSubmitRequestItem" class="btn btn-primary" value="Save" />
            </div>

        </div>
    </div>
</div>
