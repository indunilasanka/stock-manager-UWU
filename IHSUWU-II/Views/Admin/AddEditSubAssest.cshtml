@{
    ViewBag.Title = "Add Edit Sub Assests";
    Layout = "_SuperAdmin.cshtml";

}


<div class="col-md-12" style="padding-left: 45px !important;padding-right: 45px !important">
    @section Headertitle {
        @{
            var title = Model.SCId > 0 ? "Update Sub Assest" : "Add New Sub Assest";
        }

        <h1>
            @title
        </h1>
        <div class="col-md-2 pull-right" style="margin-right: -25px;">
            <a type="button" class="btn btn-default" id="btnCancelEditLead" data-dismiss="modal" href="@Url.Action("GoBackSubAssest","Admin")">Cancel</a>
            <button type="button" id="savesubassest" class="btn btn-primary">Save</button>
        </div>

        <hr />
    }

    @using (Html.BeginForm("AddEditLeads", "Admin", FormMethod.Post, new { id = "FrmAESubAssests" }))
    {
        <div class="panel panel-default" style="padding: 5px 5px 5px 5px;">
            <div class="panel-heading" style="margin-bottom :5px;">
                <h4>BasicDetails</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <span>Sub-Assest Name</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.SCName, new { verrormsg = "Name of Sub Assest is required", Id = "scname", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Sub-Assest Symbol</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.SCSymbol, new { verrormsg = "Symbol for Sub Assest is required", Id = "scsymbol", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Main Catogory</span><span style="color:red"> *</span>
                    @Html.DropDownListFor(m => m.MCId, (IEnumerable<SelectListItem>)ViewBag.MainAssests, new { verrormsg = "Main Catogory for Sub Assest is required", Id = "CountryName", @class = "form-control" })
                </div>

                @Html.HiddenFor(m => m.SCId, new { Id = "SCId" })
            </div>
        </div>

    }

</div>

