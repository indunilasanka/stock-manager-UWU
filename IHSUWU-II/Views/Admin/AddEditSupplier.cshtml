    var AdminUrl = {

        //ManageLeads: '@Url.Content("~/Lead/ManageLeads")',
        //GetDesignations: '@Url.Content("~/Admin/GetDesignations")',
        SaveSupplier: '@Url.Content("~/Admin/SaveSupplier")',
        ReviewSupplier: '@Url.Content("~/Admin/ReviewSupplier")'


    };
