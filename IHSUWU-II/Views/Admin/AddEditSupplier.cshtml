        selectmenu(5);
    });
</script>

@{
    ViewBag.Title = "Add Edit Users";
    Layout = "_SuperAdmin.cshtml";

}


<div class="col-md-12" style="padding-left: 45px !important;padding-right: 45px !important">
    @section Headertitle {
        @{
            var title = Model.SId > 0 ? "Update Supplier" : "Add New Supplier";
        }

        <h1>
            @title
        </h1>
        <div class="col-md-2 pull-right" style="margin-right: -25px;">
            <a type="button" class="btn btn-default" id="btnCancelEditLead" data-dismiss="modal" href="@Url.Action("GoBackSupplier","Admin")">Cancel</a>
            <button type="button" id="savesupplier" class="btn btn-primary">Save</button>
        </div>

        <hr />
    }

    @using (Html.BeginForm("AddEditLeads", "Admin", FormMethod.Post, new { id = "FrmAESuppliers" }))
    {
        <div class="panel panel-default" style="padding: 5px 5px 5px 5px;">
            <div class="panel-heading" style="margin-bottom :5px;">
                <h4>BasicDetails</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <span>Supplier Name</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.SName, new { verrormsg = "Name of supplier is required", Id = "sname", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Email</span>
                    @Html.TextBoxFor(m => m.SEmail, new { verrormsg = "Please Enter a valid email", Id = "semail", @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <span>Supplier Address</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.SAddress, new { verrormsg = "Address of supplier is required", Id = "saddress", @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <span>Supplier Mobile</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.SMobile, new { verrormsg = "Mobile of supplier is required", Id = "smobile", @class = "form-control" })
                </div>
                @Html.HiddenFor(m => m.SId, new { Id = "LocationId" })
            </div>
        </div>

    }

</div>

