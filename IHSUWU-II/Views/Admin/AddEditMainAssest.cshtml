@{
    ViewBag.Title = "Add Edit Main Assests";
    Layout = "_SuperAdmin.cshtml";

}


<div class="col-md-12" style="padding-left: 45px !important;padding-right: 45px !important">
    @section Headertitle {
        @{
            var title = Model.MCId > 0 ? "Update Main Assest" : "Add New Main Assest";
        }

        <h1>
            @title
        </h1>
        <div class="col-md-2 pull-right" style="margin-right: -25px;">
            <a type="button" class="btn btn-default" id="btnCancelEditLead" data-dismiss="modal" href="@Url.Action("GoBackMainAssest","Admin")">Cancel</a>
            <button type="button" id="savemainassest" class="btn btn-primary">Save</button>
        </div>

        <hr />
    }

    @using (Html.BeginForm("AddEditLeads", "Admin", FormMethod.Post, new { id = "FrmAEMainAssests" }))
    {
        <div class="panel panel-default" style="padding: 5px 5px 5px 5px;">
            <div class="panel-heading" style="margin-bottom :5px;">
                <h4>BasicDetails</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <span>Assest Name</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.MCName, new { verrormsg = "Name of Main Assest is required", Id = "mcname", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Assest Symbol</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.MCSymbol, new { verrormsg = "Symbol for Main Assest is required", Id = "mcsymbol", @class = "form-control" })
                </div>

                @Html.HiddenFor(m => m.MCId, new { Id = "MCId" })
            </div>
        </div>

    }

</div>

