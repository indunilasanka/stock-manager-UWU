@using Login.Models.Constants;
@using Login.Models;
@model Login.Models.Product

<script src="@Url.Content("~/Scripts/Apps/User.js")" type="text/javascript"></script>
<script type="text/javascript">

    var AdminUrl = {

        //ManageLeads: '@Url.Content("~/Lead/ManageLeads")',
        GetSubCatogory: '@Url.Content("~/Admin/GetSubCatogory")',
        SaveProduct: '@Url.Content("~/Admin/SaveProduct")',
        ReviewProduct: '@Url.Content("~/Admin/ReviewProduct")'


    };
    $(document).ready(function () {
        selectmenu(3);
    });
</script>

@{
    ViewBag.Title = "Add Edit Products";
    Layout = "_SuperAdmin.cshtml";

}


<div class="col-md-12" style="padding-left: 45px !important;padding-right: 45px !important">
    @section Headertitle {
        @{
            var title = Model.PROId > 0 ? "Update Product" : "Add New Product";
        }

        <h1>
            @title
        </h1>
        <div class="col-md-2 pull-right" style="margin-right: -25px;">
            <a type="button" class="btn btn-default" id="btnCancelEditLead" data-dismiss="modal" href="@Url.Action("GoBackProduct","Admin")">Cancel</a>
            <button type="button" id="saveproduct" class="btn btn-primary">Save</button>
        </div>

        <hr />
    }

    @using (Html.BeginForm("AddEditLeads", "Admin", FormMethod.Post, new { id = "FrmAEProducts" }))
    {
        <div class="panel panel-default" style="padding: 5px 5px 5px 5px;">
            <div class="panel-heading" style="margin-bottom :5px;">
                <h4>BasicDetails</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <span>Product Name</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.ProName, new { verrormsg = "Product Name is required", Id = "prname", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Product No</span><span style="color:red"> *</span>
                    @Html.TextBoxFor(m => m.ProNo, new { verrormsg = "Product Number is required", Id = "prno", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Main Catogory</span><span style="color:red"> *</span>
                    @Html.DropDownListFor(m => m.MCId, (IEnumerable<SelectListItem>)ViewBag.MainAssests, new { verrormsg = "Main Catogory for Product is required", Id = "mcid", @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <span>Sub Catogory</span><span style="color:red"> *</span>
                    @Html.DropDownListFor(m => m.SCId, (IEnumerable<SelectListItem>)ViewBag.SubAssests, new { verrormsg = "Sub Catogory for Product is required", Id = "scid", @class = "form-control" })
                </div>

                @Html.HiddenFor(m => m.PROId, new { Id = "PROId" })

            </div>
        </div>

    }

</div>

