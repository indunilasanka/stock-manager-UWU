@model Login.Models.RNItemList

@{
    ViewBag.Title = "AddProduct";
}
<script src="@Url.Content("~/Scripts/Apps/PDH.js")" type="text/javascript"></script>

@{
    var title = Model.GIId > 0 ? "Update Item" : "Add Item";
}


<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@title</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "AddEditRNItem" }))
            {
                if (!Model.IsApproved)
                {
                    <div class="row form">
                        <label for="Class" class="col-md-4">GRN :<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.GRNId, (IEnumerable<SelectListItem>)ViewBag.GRN, new { verrormsg = "Please select a Good Received Note!", Id = "GRNId", @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form">
                        <label for="Class" class="col-md-4">GRN Item :<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.GIId, (IEnumerable<SelectListItem>)ViewBag.GRNI, new { verrormsg = "Please select a Good Received Note Item!", Id = "GIId", @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form">
                        <label for="Class" class="col-md-4">Description<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.RIDescription, new { verrormsg = "Please enter a Description!", Id = "RIDescription", @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form">
                        <label for="Class" class="col-md-4">Quantity<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.RIQuantity, new { verrormsg = "Please enter a item Quantity!", Id = "RIQuantity", @class = "form-control" })
                            <label id="qty1" style="color:red;"></label>
                            <label id="qty3" style="color:red;"></label>
                        </div>
                    </div>
                    <div class="row form">
                        <label for="Class" class="col-md-4">Unit Price<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.RIUnitPrice, new { verrormsg = "Please enter a Item Unit Price!", @class = "form-control", Id = "RIUnitPrice" })
                            <label id="qty2" style="color:red;"></label>
                            @Html.HiddenFor(m => m.RNId, new { Id = "RNId" })
                            @Html.HiddenFor(m => m.RIId, new { Id = "RIId" })
                        </div>
                    </div>
                }
                else
                {
                    <div class="row form">
                        <label for="Class" class="col-md-4">GRN :<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.GRNId, (IEnumerable<SelectListItem>)ViewBag.GRN, new { verrormsg = "Please select a Good Received Note!", Id = "GRNId", @class = "form-control", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="row form">
                        <label for="Class" class="col-md-4">GRN Item :<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.GIId, (IEnumerable<SelectListItem>)ViewBag.GRNI, new { verrormsg = "Please select a Good Received Note Item!", Id = "GIId", @class = "form-control", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="row form">
                        <label for="Class" class="col-md-4">Description<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.RIDescription, new { verrormsg = "Please enter a Description!", Id = "RIDescription", @class = "form-control", @readonly = true })
                        </div>
                    </div>
                    <div class="row form">
                        <label for="Class" class="col-md-4">Quantity<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.RIQuantity, new { verrormsg = "Please enter a item Quantity!", Id = "RIQuantity", @class = "form-control" , @readonly = true })
                            <label id="qty1" style="color:red;"></label>
                            <label id="qty3" style="color:red;"></label>
                        </div>
                    </div>
                    <div class="row form">
                        <label for="Class" class="col-md-4">Unit Price<span style="color:red"> *</span></label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.RIUnitPrice, new { verrormsg = "Please enter a Item Unit Price!", @class = "form-control", Id = "RIUnitPrice" , @readonly = true })
                            <label id="qty2" style="color:red;"></label>
                            @Html.HiddenFor(m => m.RNId, new { Id = "RNId" })
                            @Html.HiddenFor(m => m.RIId, new { Id = "RIId" })
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">

                    </div>
                </div>
            }
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                @if (!Model.IsApproved)
                {
                     <input type="button" id="btnSubmitRMItem" class="btn btn-primary" value="Save" />
                }
            </div>

        </div>
    </div>
</div>
